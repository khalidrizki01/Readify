// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String @unique
  password  String
  address   String
  phone     String
  bookIDs   String[] @db.ObjectId
  booksRead Book[] @relation(fields: [bookIDs], references: [id])
}

model Genre {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  bookIDs   String[] @db.ObjectId
  books Book[] @relation(fields: [bookIDs], references: [id])
}

model Book {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  book_title      String
  ISBN            String
  author          String
  publisher       String
  year_published  Int
  cover_link      String
  like_count      Int     @default(0)

  genreIDs   String[] @db.ObjectId
  genres Genre[] @relation(fields: [genreIDs], references: [id])

  userIDs   String[] @db.ObjectId
  users User[] @relation(fields: [userIDs], references: [id])
}